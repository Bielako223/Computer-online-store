@using StoreLibrary.Models;
@model ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}
@if (TempData["AddressError"] != null)
{
    @TempData["AddressError"]
}
<table>
    @foreach (var obj in Model.ShoppingCart.ShoppingCartItems)
    {
        <tr>
            <th><img src="/img/@obj.Item.ImgPath" width="50px" height="50px" /></th>
            <th>@obj.Item.Name</th>
            <th>
                [@obj.Amount]
            </th>
            <th>@obj.Item.Price zł</th>
        </tr>
    }
</table>
Total: @ViewBag.total zł
Address:
@ViewBag.City
@ViewBag.Street
@ViewBag.HouseNumber
@ViewBag.Zipcode
<a href="/Identity/Account/Manage">Change Address</a>
@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Cart" asp-action="Buy">Buy</a>
}
else
{
    <span>zaloguj sie</span>
}


