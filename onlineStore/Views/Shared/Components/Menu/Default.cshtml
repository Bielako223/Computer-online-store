@model int


@if (Model==0)
{
    <button class="btn btn-primary"><i class="bi bi-cart"></i></button>
}
else
{
    @if (Model==1)
    {
        <button class="btn btn-primary"><i class="bi bi-cart"></i> @Model Item</button>
    }
    else
    {
        <button class="btn btn-primary"><i class="bi bi-cart"></i> @Model Items</button>
    }
    
}

