@using Microsoft.AspNetCore.Identity
@using OnlineStore.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <button class="btn btn-primary loginButton"> <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a></button>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Items", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-primary loginButton">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <button class="btn btn-primary loginButton"><a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></button>
    </li>
    <li class="nav-item">
            <button class="btn btn-primary loginButton"><a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></button>
    </li>
}
</ul>
